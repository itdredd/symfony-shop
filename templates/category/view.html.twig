{% extends 'base.html.twig' %}

{% block body_id 'category_view' %}

{% block body %}
    <h3 class="page-title">{{ category.name }}</h3>
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ category.imgUrl }}" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price }} {{ product.currency }}</p>
                        <a href="{{ path('product_view', {'id': product.id}) }}" class="btn btn-primary">View product</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
