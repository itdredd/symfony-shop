{% extends 'base.html.twig' %}

{% block body_id 'product_view' %}

{% block body %}
    <h3 class="page-title">{{ product.name }}</h3>
    <div class="container">
        <div class="card text-center">
            <div class="card-img">
                <img class="img-fluid text-center" src="{{ product.category.imgUrl }}"/>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ product.price }} {{ product.currency }}</h5>
                <p class="card-text">{{ product.description|raw}}</p>
                <a href="#" class="btn btn-primary"><i class="fa-solid fa-cart-shopping"></i>Buy</a>
                <a href="{{ product.forumUrl }}" class="btn btn-info"><i class="fa-solid fa-gamepad"></i>Yougame thread</a>
            </div>
            <div class="card-footer text-muted">
                {{ product.getDurationTime() }}
            </div>
        </div>

    </div>
{% endblock %}
